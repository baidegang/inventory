<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
    <package name="default" extends="struts-default">
        <!-- Hello worldのサンプルアクション -->
        <action name="IndexAction" class="record.IndexAction" method="execute">
            <result name="success">receive/receive.jsp</result>
        </action>

        <action name="register" class="record.RegisterAction" method="execute">
            <result name="success">/receive/success.jsp</result>
            <result name="IndexAction" type="chain">IndexAction</result>
        </action>   
    </package>
</struts>