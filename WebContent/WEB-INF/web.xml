<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>inventory</display-name>
  <!-- welcomeで指定したファイルを上から順番に探し、最初に見つけたものを表示する -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>		<!-- 1番目に探すファイル-->
    <welcome-file>index.jsp</welcome-file> 		<!-- 2番目に探すファイル-->
    <welcome-file>index.htm</welcome-file> 		<!-- 3番目に探すファイル-->
    <welcome-file>default.html</welcome-file> 	<!-- 4番目に探すファイル-->
    <welcome-file>default.jsp</welcome-file> 	<!-- 5番目に探すファイル-->
    <welcome-file>default.htm</welcome-file> 	<!-- 6番目に探すファイル-->
  </welcome-file-list>
  	<!-- strutsの機能を使う宣言-->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<!-- /*にしているので、どんなURLでもstrutsの機能を使って処理します宣言 -->
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>