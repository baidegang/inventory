<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="default" extends="struts-default">
    
    	<!-- ログインアクション -->
        <action name="login" class="product.LoginAction" method="execute">
            <result name="success">/view/zaiko_kanri/zaiko_top.jsp</result>
            <result name="error">index.jsp</result>
            <result name="input">index.jsp</result>
        </action>

        <!-- ログアウトアクション -->
        <action name="logout" class="product.LogoutAction" method="execute">
        	<result name="success">index.jsp</result>
        </action>
        
        <!-- 登録アクション -->
        <action name="registPage" class="product.RegistAction" method="init">
        	<result name="success">/view/zaiko_kanri/zaiko_regist.jsp</result>
        </action>
        <action name="regist" class="product.RegistAction" method="execute">
        	<result name="success">/view/zaiko_kanri/zaiko_regist.jsp</result>
        	<result name="error">/view/zaiko_kanri/zaiko_regist.jsp</result>
            <result name="input">/view/zaiko_kanri/zaiko_regist.jsp</result>
        </action>
        
        <!-- 更新アクション -->
        <action name="updateList" class="product.ListAction" method="execute">
        	<result name="success">/view/zaiko_kanri/zaiko_update.jsp</result>
        	<result name="error">/view/zaiko_kanri/zaiko_update.jsp</result>
        </action>
        
        <action name="update" class="product.UpdateAction" method="execute">
        	<result name="success">/view/zaiko_kanri/zaiko_update.jsp</result>
        	<result name="error">/view/zaiko_kanri/zaiko_update.jsp</result>
        </action>
        
        <!-- 削除アクション -->
        <action name="deleteList" class="product.ListAction" method="execute">
        	<result name="success">/view/zaiko_kanri/zaiko_delete.jsp</result>
        	<result name="error">/view/zaiko_kanri/zaiko_delete.jsp</result>
        </action>
        
        <action name="delete" class="product.DeleteAction" method="execute">
        	<result name="success">/view/zaiko_kanri/zaiko_delete.jsp</result>
        	<result name="error">/view/zaiko_kanri/zaiko_delete.jsp</result>
        </action>
        
    </package>
</struts>